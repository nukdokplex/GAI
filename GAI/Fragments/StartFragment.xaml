<Page x:Class="GAI.StartFragment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:util="clr-namespace:GAI.Utils"
      xmlns:local="clr-namespace:GAI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartFragment"
      >
    <StackPanel x:Name="RootLayout">
        <StackPanel.Background>
            <SolidColorBrush Color="{StaticResource WindowBackground}"/>
        </StackPanel.Background>
        <Frame  x:Name="HeaderContainer"/>
        <Frame  x:Name="NavigationContainer" Navigated="NavigationContainer_Navigated" Source="/Fragments/AuthFragment.xaml"/>
    </StackPanel>
</Page>
