<Page x:Class="GAI.Fragments.DriversFragment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GAI.Fragments"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DriversFragment" Loaded="Page_Loaded">
    <StackPanel>
        <ScrollViewer Height="300" MouseDoubleClick="ScrollViewer_MouseDoubleClick">
            <DataGrid x:Name="driversDataGrid" IsReadOnly="True" />
        </ScrollViewer>
        <Button Name="SelectDriverButton" Content="Выбрать водителя" Click="SelectDriverButton_Click"/>

    </StackPanel>
</Page>
