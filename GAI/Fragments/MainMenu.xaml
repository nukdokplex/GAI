<Page x:Class="GAI.Fragments.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GAI.Fragments"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <StackPanel x:Name="RootLayout" Background="White">
    
            <StackPanel>
                <StackPanel.Background>
                    <SolidColorBrush Color="{StaticResource PrimaryColor}"/>
                </StackPanel.Background>
                <TextBlock HorizontalAlignment="Center" FontSize="24" Foreground="{StaticResource PrimaryColorText}">Created by NukDokPlex</TextBlock>
            </StackPanel>
        <StackPanel>
            <TextBlock >
                <ListBox>
                    <ListBoxItem>
                        <Hyperlink NavigateUri="MainMenu.xaml" Foreground="{StaticResource AccentColorBrush}">Изменение информации о водителе</Hyperlink>
                    </ListBoxItem>
                    <ListBoxItem>
                        <Hyperlink Foreground="{StaticResource AccentColorBrush}">Изменение информации о водителе</Hyperlink>
                    </ListBoxItem>
                </ListBox>
                
            </TextBlock>
        </StackPanel>
    
    </StackPanel>
</Page>
